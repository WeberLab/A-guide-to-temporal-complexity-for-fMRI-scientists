}

@article{gonzalezandinoMeasuringComplexityTime2000,
  title = {Measuring the Complexity of Time Series: {{An}} Application to Neurophysiological Signals},
  shorttitle = {Measuring the Complexity of Time Series},
  author = {Gonzalez Andino, S.L. and {Grave de Peralta Menendez}, R. and Thut, G. and Spinelli, L. and Blanke, O. and Michel, C.M. and Landis, T.},
  year = 2000,
  month = aug,
  journal = {Human Brain Mapping},
