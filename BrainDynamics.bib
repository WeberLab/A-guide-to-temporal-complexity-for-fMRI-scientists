@article{girnLimbicNetworkComprising2024,
  title = {The ``Limbic Network,'' Comprising Orbitofrontal and Anterior Temporal Cortex, Is Part of an Extended Default Network: {{Evidence}} from Multi-Echo {{fMRI}}},
