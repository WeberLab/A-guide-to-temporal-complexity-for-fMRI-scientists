@article{zhouRestingstateBrainEntropy2019,
  title = {Resting-state Brain Entropy in Right Temporal Lobe Epilepsy and Its Relationship with Alertness},
  author = {Zhou, Muhua and Jiang, Wenyu and Zhong, Dan and Zheng, Jinou},
  year = 2019,
  month = nov,
