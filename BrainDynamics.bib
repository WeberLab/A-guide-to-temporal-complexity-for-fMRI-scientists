}

@article{golesorkhiTemporalSpatialTopography2022,
  title = {From Temporal to Spatial Topography: Hierarchy of Neural Dynamics in Higher- and Lower-Order Networks Shapes Their Complexity},
  shorttitle = {From Temporal to Spatial Topography},
  author = {Golesorkhi, Mehrshad and {Gomez-Pilar}, Javier and {\c C}atal, Yasir and Tumati, Shankar and Yagoub, Mustapha C E and Stamatakis, Emanuel A and Northoff, Georg},
