@article{allendorferBrainNetworkEntropy2024,
  title = {Brain Network Entropy, Depression, and Quality of Life in People with Traumatic Brain Injury and Seizure Disorders},
  author = {Allendorfer, Jane B. and Nenert, Rodolphe and Goodman, Adam M. and Kakulamarri, Pranav and Correia, Stephen and Philip, Noah S. and LaFrance, W. Curt and Szaflarski, Jerzy P.},
