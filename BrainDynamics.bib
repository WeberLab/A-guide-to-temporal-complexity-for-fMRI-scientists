@misc{donoghueEvaluatingComparingMeasures2024,
  title = {Evaluating and {{Comparing Measures}} of {{Aperiodic Neural Activity}}},
  author = {Donoghue, Thomas and Hammonds, Ryan and Lybrand, Eric and Washcke, Leonhard and Gao, Richard and Voytek, Bradley},
